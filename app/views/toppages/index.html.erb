<% if logged_in? %>
<div class="text-center">
  <h1>Reportshareへようこそ</h1>
  <%= link_to 'Mypageへ', user_path(current_user), class:'btn btn-info btn-lg' %>
</div>
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Reportshareへようこそ</h1>
      <p>Reportshareは研究開発などの進捗内容をチーム内で共有するアプリケーションです。</p>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <%= link_to '新規登録', signup_path, class: 'btn btn-info btn-lg' %>
        <%= link_to 'ログイン', login_path, class: 'btn btn-info btn-lg' %>
      </div>
    </div>
  </div>
<% end %>