<div class="text-center">
  <h1><%= @theme.name %></h1>
  <p>作成ユーザー:<%= @theme.user.name %></p>
  <p>参加チーム:<% @theme.followed_teams.each do |team| %><%= team.name %><% end %></p>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h4>背景</h4>
    <div class="detail">
      <p class="normal"><%= @theme.introduction %></p>
    </div>
    
    <h4>目的</h4>
    <div class="detail">
      <p class="normal"><%= @theme.objective %></p>
    </div>
    
    <% if current_user == @theme.user %>
      <div class="edit_button">
        <%= link_to '編集', edit_theme_path(@theme), class: 'btn btn-info btn-block' %>
      </div>
      <h4>チームの追加</h4>
      <%= render 'team_themes/team_form', theme: @theme %>
    <% end %>
    
    <h4>タスク一覧</h4>
    <div>
      <ul>
        <% @theme.tasks.each do |task| %>
          <li class="members_list"><%= link_to task.title, task_path(task) %></li>
        <% end %>
      </ul>
    </div>
    
    <% @theme.followed_teams.each do |team| %>
      <% if current_user.join?(team) %>
        <div class="edit_button">
          <%= link_to 'Taskの投稿', new_theme_task_path(@theme), class: 'btn btn-info btn-block' %>
        </div>
      <% end %>
    <% end %>
      
  </div>
</div>