<div class="text-center">
  <h1>実験・作業の投稿</h1>
  <p>テーマ:<%= @theme.name %></p>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@theme, @task] do |f| %>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル (50字以内)' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :overview, '概要 (500字以内・省略可)' %>
        <%= f.text_area :overview, class: 'form-control', rows: 3 %>
      </div>
      
      <div class="form-group">
        <%= f.label :objective, '目的 (50文字以内)' %>
        <%= f.text_area :objective, class: 'form-control', rows: 5 %>
      </div>
      
      <div class="form-group">
        <%= f.label :method, '方法・作業内容' %>
        <%= f.text_area :method, class: 'form-control', rows: 50 %>
      </div>
      
      <div class="form-group">
        <%= f.label :result, '結果' %>
        <%= f.text_area :result, class: 'form-control', rows: 100 %>
      </div>
      
      <div class="form-group">
        <%= f.label :figure, '図表(画像ファイルで投稿)' %>
        <%= f.file_field :figure, class: 'form-control' %>
      </div>
      
      <%= f.submit '投稿', class: 'btn btn-info btn-block' %>
    <% end %>
  </div>
</div>