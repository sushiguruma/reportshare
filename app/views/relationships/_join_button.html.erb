<% if current_user.join?(team) %>
  <%= form_for(current_user.relationships.find_by(team_id: team.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :team_id, team.id %>
    <%= f.submit '参加中(脱退)', class: 'btn btn-warning btn-block'%>
  <% end %>
<% else %>
  <%= form_for(current_user.relationships.build) do |f| %>
    <%= hidden_field_tag :team_id, team.id %>
    <%= f.submit '参加', class: 'btn btn-info btn-block' %>
  <% end %>
<% end %>